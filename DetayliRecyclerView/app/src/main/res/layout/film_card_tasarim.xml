<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <android.support.v7.widget.CardView
        android:id="@+id/film_card"
        android:layout_width="211dp"
        android:layout_height="434dp"
        android:layout_margin="3dp"
        app:cardCornerRadius="5dp">

        <RelativeLayout
            android:layout_width="207dp"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/film_resim"
                android:layout_width="200dp"
                android:layout_height="300dp"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="5dp"
                app:srcCompat="@drawable/django" />

            <Button
                android:id="@+id/buttonSepet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/film_fiyat"
                android:layout_centerHorizontal="true"
                android:layout_margin="5dp"
                android:text="SEPETE EKLE" />

            <TextView
                android:id="@+id/film_bilgi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/film_resim"
                android:layout_centerHorizontal="true"
                android:text="Django"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/film_fiyat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/film_bilgi"
                android:layout_centerHorizontal="true"
                android:layout_margin="5dp"
                android:text="15.99 â‚º" />


        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>